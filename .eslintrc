root:
  true

extends:
  airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  indent: 2
  func-style: 0
  func-names: 0
  comma-dangle: 0
  no-console: 0
  no-param-reassign: 0
  class-methods-use-this: 0
  import/no-named-as-default: 0
  react/no-string-refs: 0
  react/forbid-prop-types: 0
  react/prefer-stateless-function: 0
  react/require-extension: off

plugins:
- react
